<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" type="image/x-icon" href="~/logo-sgb-2.png" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-negru border-bottom box-shadow mb-3">
            <div class="container">
                <nav class="navbar">
                    <a class="navbar-left" asp-area="" asp-controller="products" asp-action="index">
                        <img src="https://i.imgur.com/efbLXN2.png" width="200" />
                    </a>
                </nav>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="sgb" asp-action="index">Team</a>
                        </li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            @*<li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownUpload" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Upload
                                </a>
                                <div class="dropdown-menu bg-negru" aria-labelledby="navbarDropdownUpload">
                                    <a class="nav-link text-light" asp-area="" asp-controller="products" asp-action="createbeat">Upload Beat</a>
                                    <a class="nav-link text-light" asp-area="" asp-controller="products" asp-action="createclothingarticle">Upload Clothing Article</a>
                                </div>
                            </li>*@
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="administration" asp-action="index">Administration</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="products" asp-action="yourbeats">Your Beats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="sgb" asp-action="supportus"><div class="text-portocaliu">Support us</div></a>
                        </li>
                        <li class="nav-item dropdown ml-auto">
                            <a class="nav-link dropdown-toggle text-light" href="#" id="navbarDropdownCarts" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-shopping-cart"></i>
                            </a>
                            <div class="dropdown-menu bg-negru" aria-labelledby="navbarDropdownCarts">
                                <a class="nav-link text-light" asp-area="" asp-controller="beatscart" asp-action="index">Beats <i class="fas fa-shopping-cart"></i></a>
                                <a class="nav-link text-light" asp-area="" asp-controller="clothescart" asp-action="index">Clothes <i class="fas fa-shopping-cart"></i></a>
                            </div>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3 text-light">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-gri">
            &copy; 2021 - StaticGlobalBoyz - <a asp-area="" asp-controller="products" asp-action="privacy" class="text-gri">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/34183b3d48.js" crossorigin="anonymous"></script>
    <script src="_framework/blazor.server.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
