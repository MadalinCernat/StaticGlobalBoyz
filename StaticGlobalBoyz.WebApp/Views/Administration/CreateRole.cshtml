@model StaticGlobalBoyz.WebApp.ViewModels.CreateRoleViewModel

@{
    ViewData["Title"] = "Create Role - Static Global Boyz";
}

<h3>Create Role</h3>
<hr />
<form asp-action="createrole" method="post" class="mt-3">
    <div class="form-group">
        <label asp-for="RoleName" class="control-label text-portocaliu"></label>
        <input asp-for="RoleName" class="form-control" placeholder="Name" style="width:auto;">
        <span asp-validation-for="RoleName" class="text-portocaliu"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-outline-orange" style="width:auto">
            Create
        </button>
    </div>
</form>