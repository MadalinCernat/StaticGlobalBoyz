@model List<StaticGlobalBoyz.WebApp.Models.TagModel>

@{
    ViewData["Title"] = "Delete Tag - Static Global Boyz";

}
<h3>Delete Tag</h3>
@foreach (var tag in Model)
{
    <form method="post" style="display:flex;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="@tag.Id" />
            <input asp-for="@tag.Name" class="form-control" readonly/>
            <span asp-validation-for="@tag.Name" class="text-danger"></span>
        </div>
        <div class="form-group ml-3">
            <input type="submit" value="Delete" class="btn btn-outline-orange" />
        </div>
    </form>
}

